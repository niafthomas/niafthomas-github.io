
  {"$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  
  
    "data": {
      "url": "https://raw.githubusercontent.com/RDeconomist/RDeconomist.github.io/main/data/demographicsUN.csv",
      "format": {"type": "csv"}
    },
  
    "title": {
      "text": "Aging populations",
      "subtitle":"Share of popluation that is 65+, S.Korea=blue",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"
    },
  
    "config": {
      "background":"#FFFFFF",
      "view": {
        "stroke": "transparent"}},

        
    "height": 300,
    "width": "container",
    
    "mark": {
      "type":"line",
      "point": false,
      "interpolate": "linear",
      "color":"rgb(0,67,167)"
    },
  
    "transform": [{"filter": {"selection": "Region"}}],
    
    "selection": {
      "Region": {
        "type": "single",
        "fields": ["Region"],
        "bind": {
          "input": "select",
          "options": [
            null,
            "Australia",
            "Bangladesh",
            "Brazil",
            "Canada",
            "Chile",
            "China",
            "Democratic Republic of the Congo",
            "France",
            "India",
            "Indonesia",
            "Italy",
            "France",
            "Japan",
            "Republic of Korea",
            "Spain",
            "United Kingdom",
            "United States of America"
          ],
          "name": "Select a country"
        }
      }
    },
  
    "encoding": {
      "x": {
       "field": "Year", 
       "type": "temporal", 
       "title": null
      },
      
      "y": {
        "field": "sh_65+",
        "type": "quantitative",
        "title": null
      },
      
        
      "color": {
        "field": "Region", 
        "type": "nominal",
        "legend": null,
        "scale": {"range": ["#C1D0E6", "#C1D0E6", "#C1D0E6", "#C1D0E6", "#C1D0E6", "#C1D0E6", "#C1D0E6", "#C1D0E6", "#C1D0E6", "#C1D0E6", "#C1D0E6", "#C1D0E6", "blue", "#C1D0E6", "#C1D0E6", "#C1D0E6", "#C1D0E6", "#C1D0E6"]}
      }
    }
  }
