{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Japanese Yen to U.S. Dollar Spot Exchange Rate",
    "title": {
        "text": "Japanese Yen to U.S. Dollar Spot Exchange Rate",
        "subtitle": "Source: FRED",
        "subtitleFontStyle": "italic",
        "subtitleFontSize": 10,
        "anchor": "start"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/niafthomas/niafthomas.github.io/main/data-Fred-DEXJPUS.json",
        "format": {
            "type": "json",
            "property": "observations"
        }
    },
    "height": 300,
    "width": 310,
    "mark": {
        "type": "line",
        "point": false,
        "color": "red"
    },
    "encoding": {
        "x": {
            "field": "date",
            "type": "temporal",
            "axis": {
                "title": null,
                "grid": false,
                "labelSeparation": 10
            }
        },
        "y": {
            "field": "value",
            "type": "quantitative",
            "title": "",
            "scale": {
                "domain": [
                    0,
                    400
                ]
            },
            "axis": {
                "grid": false,
                "format": "0s",
                "labelSeparation": 0
            }
        },
        "color": {
            "timeUnit": "year",
            "field": "date",
            "title": "Year",
            "scale": {
                "scheme": "inferno"}
            }
        
    }
}