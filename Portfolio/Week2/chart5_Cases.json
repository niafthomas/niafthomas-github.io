{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.2.json",
  
  "title": {
    "text": "COVID-19 Cases",
    "subtitle":"Number of cases by date reported",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black"
  },
  
   "data": {
    "url": "https://raw.githubusercontent.com/niafthomas/niafthomas.github.io/main/Cases.csv",
    "format": {"type": "csv"}
  },

   "transform":[
      
      {"filter": {
        "field": "areaName", 
        "oneOf": ["Scotland", "Northern Ireland", "Wales"]}
        }


    ],
  
  
  "height": 300,
  "width": 310,
   
  "mark": {"type": "bar", "point": false},
 
  "encoding": {

    "x": {
      "field": "date",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false}
    },

    "y": {
      "field": "cumCasesByPublishDate",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": false}
    },

    "color": {
      "field": "areaName",
      "type": "nominal",
      "scale": {"scheme": "blues"},
      "title": "Nation",
      "legend": {
        "orient": "top-left", 
        "fillColor": "#FcFdFd"}
    }
}
}