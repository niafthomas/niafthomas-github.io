{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
    "description": "2020 Social Mobility Index in G7 Countries",
    "title": {
      "text": "2020 Social Mobility Index in G7 Countries",
      "subtitle": "Source: World Economic Forum",
      "subtitleFontStyle":"italic",
      "anchor": "start"
    },
  
    "data": {
      "url": "https://raw.githubusercontent.com/niafthomas/niafthomas.github.io/main/Social_Mobility.csv",
      "format": {"type": "csv"}
    },
    
   "height": 300,
   "width": 360,
  
  "transform":[
          
          {"filter": {
            "field": "Country", 
            "oneOf": ["Canada", "France", "United States",
            "Germany","Italy","Japan","United Kingdom"]}
            }
        ],
  
  "mark": {"type": "bar", "color": "#889de4"
  },
    "encoding": {
    "x": {
        "field": "Country", 
        "type": "nominal", 
        "title": "", 
        "axis": {"labelAngle": 270}
    },
  
    "y": {"field": "Index Score",
      "type": "quantitative",
      "scale":{"domain":[0, 100]}
      }
    }
    
  }