{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "S&P 500 Index",
    "title": {
        "text": "S&P 500 Index",
        "subtitle": "Source: FRED",
        "subtitleFontStyle": "italic",
        "subtitleFontSize": 10,
        "anchor": "start"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/niafthomas/niafthomas.github.io/main/data-Fred-SP500.json",
        "format": {
            "type": "json",
            "property": "observations"
        }
    },
    "height": 300,
    "width": 400,
    "mark": {
        "type": "line",
        "point": false,
        "color": "red"
    },
    "encoding": {
        "x": {
            "field": "date",
            "type": "temporal",
            "axis": {
                "title": null,
                "grid": false,
                "labelSeparation": 10
            }
        },
        "y": {
            "field": "value",
            "type": "quantitative",
            "title": "",
            "scale": {"domain": [0,5500]
            },
            "axis": {
                "grid": false,
                "labelSeparation": 0
            }
        },
        "color": {
            "timeUnit": "year",
            "field": "date",
            "title": "Year",
            "scale": {
                "scheme": "yelloworangebrown"}
            }
        
    }
}